<?xml version="1.0" encoding="UTF-8"?>
<kcfg xmlns="http://www.kde.org/standards/kcfg/1.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.kde.org/standards/kcfg/1.0
      http://www.kde.org/standards/kcfg/1.0/kcfg.xsd">
  <kcfgfile name=""/>

  <group name="General">
    <entry name="githubToken" type="String">
      <label>GitHub Personal Access Token</label>
      <default></default>
    </entry>
    <entry name="githubUsername" type="String">
      <label>GitHub Username</label>
      <default></default>
    </entry>
    <entry name="refreshInterval" type="Int">
      <label>Refresh interval in minutes</label>
      <default>5</default>
    </entry>
    <entry name="itemsPerPage" type="Int">
      <label>Items per page</label>
      <default>5</default>
    </entry>
    <entry name="showRepositoriesTab" type="Bool">
      <label>Show Repositories tab</label>
      <default>true</default>
    </entry>
    <entry name="showIssuesTab" type="Bool">
      <label>Show Issues tab</label>
      <default>true</default>
    </entry>
    <entry name="showPullRequestsTab" type="Bool">
      <label>Show Pull Requests tab</label>
      <default>true</default>
    </entry>
    <entry name="showOrganizationsTab" type="Bool">
      <label>Show Organizations tab</label>
      <default>true</default>
    </entry>
    <entry name="showStarredTab" type="Bool">
      <label>Show Starred Repositories tab</label>
      <default>true</default>
    </entry>
    <entry name="iconTheme" type="Int">
      <label>GitHub Icon Theme</label>
      <default>0</default>
    </entry>
    <entry name="showIconInTitle" type="Bool">
      <label>Show icon next to title</label>
      <default>true</default>
    </entry>
    <entry name="showProfileCard" type="Bool">
      <label>Show profile card</label>
      <default>true</default>
    </entry>
    <entry name="useProfileCarousel" type="Bool">
      <label>Use profile carousel</label>
      <default>false</default>
    </entry>
    <entry name="commitGraphColor" type="Int">
      <label>Commit graph color scheme</label>
      <default>0</default>
    </entry>
    <entry name="defaultReadmeViewMode" type="Int">
      <label>Default README view mode</label>
      <default>2</default>
    </entry>
    <entry name="defaultCommentViewMode" type="Int">
      <label>Default comment view mode</label>
      <default>1</default>
    </entry>
    <entry name="showUserAvatars" type="Bool">
      <label>Show user avatars</label>
      <default>true</default>
    </entry>
    <entry name="showOrgAvatars" type="Bool">
      <label>Show organization avatars</label>
      <default>true</default>
    </entry>
    <entry name="showRepoAvatars" type="Bool">
      <label>Show repository owner avatars</label>
      <default>true</default>
    </entry>
    <entry name="showIssueAvatars" type="Bool">
      <label>Show issue author avatars</label>
      <default>true</default>
    </entry>
    <entry name="showPRAvatars" type="Bool">
      <label>Show PR author avatars</label>
      <default>true</default>
    </entry>
    <entry name="showProfileReadmeTab" type="Bool">
      <label>Show Profile README tab</label>
      <default>true</default>
    </entry>
  </group>

</kcfg>
